<% if user_signed_in? %>

<p id="notice"><%= notice %></p>

<h1>Friend List</h1>

<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User ID</th>
      <th colspan="1"></th>
    </tr>
  </thead>
 
  <tbody>
  <% @friends.each do |friend| %>
    <% if friend.user == current_user %>

     <tr>
      <%# <td><%= render friend</td> displays all the details of a friend  %>
      <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td> 
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <td><%= friend.user_id %></td>
    
      <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>

    </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
<% else %>
  <h1>Hello World! </h1>
  <p>this is my first rails page</p>

<% end %>